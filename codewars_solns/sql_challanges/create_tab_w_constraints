create schema if not exists trial;

create table if not exists trial.department(
d_id int primary key,
deptname char(15),
unique(deptname));

create table if not exists trial.tab1 (
	name varchar(255) not null,
	surname varchar(255) not null,
	age int,
	e_id int primary key,
	department_name char(15),
	constraint fk_department
		foreign key(department_name)
			references trial.department(deptname)
			on delete set null
			on update cascade,
	unique(surname,name)
	);
	
insert into trial.department(d_id,deptname)
values
(1, 'IT'),
(2, 'Accounting'),
(3, 'Marketing'),
(4, 'Sales');

insert into trial.tab1(name, surname, age, e_id, department_name)
values
('pelin', 'keskin', 35, 1, 'IT'),
('arya', 'fay', 30, 2, 'Marketing'),
('peter', 'don', 55, 3, 'Accounting'),
('cris',  'ker', 38, 4, 'Sales');
